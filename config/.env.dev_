EMAIL_SENDER=your-email@gmail.com
EMAIL_USE_TLS=true

# 安全配置
SECURITY_TOKEN_SECRET_KEY=your-secret-key-here
SECURITY_TOKEN_ALGORITHM=HS256
SECURITY_TOKEN_ACCESS_TOKEN_EXPIRE_MINUTES=30
SECURITY_TOKEN_REFRESH_TOKEN_EXPIRE_DAYS=7

# 密码策略
SECURITY_PASSWORD_POLICY_MIN_LENGTH=8
SECURITY_PASSWORD_POLICY_MAX_LENGTH=32
SECURITY_PASSWORD_POLICY_REQUIRE_UPPERCASE=true
SECURITY_PASSWORD_POLICY_REQUIRE_LOWERCASE=true
SECURITY_PASSWORD_POLICY_REQUIRE_NUMBERS=true
SECURITY_PASSWORD_POLICY_REQUIRE_SPECIAL_CHARS=true
SECURITY_PASSWORD_POLICY_MAX_REPEATED_CHARS=3
SECURITY_PASSWORD_POLICY_PASSWORD_HISTORY=5
SECURITY_PASSWORD_POLICY_EXPIRE_DAYS=90
SECURITY_PASSWORD_POLICY_LOCK_DURATION=30
SECURITY_PASSWORD_POLICY_MAX_ATTEMPTS=5

# 日志配置
LOGGING_LOG_LEVEL=INFO
LOGGING_LOG_DIR=logs
LOGGING_FILE_LOGGING=true
LOGGING_CONSOLE_LOGGING=true
LOGGING_ASYNC_LOGGING=true
LOGGING_QUEUE_SIZE=1000

# 日志轮转
LOGGING_ROTATION_MAX_BYTES=10485760
LOGGING_ROTATION_BACKUP_COUNT=30
LOGGING_ROTATION_COMPRESS=true

# 日志告警
LOGGING_ALERT_ENABLED=true
LOGGING_ALERT_ERROR_THRESHOLD=10
LOGGING_ALERT_INTERVAL=3600
LOGGING_ALERT_CHANNELS=["email"]
LOGGING_ALERT_RECEIVERS=["admin@example.com"]
