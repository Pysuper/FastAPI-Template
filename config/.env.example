# 应用配置
APP_NAME=ApiRocket
APP_ENV=dev
DEBUG=true

# 服务配置
HOST=0.0.0.0
PORT=8000
WORKERS=4
RELOAD=true

# 项目配置
PROJECT_NAME=ApiRocket
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# 数据库配置
MYSQL_SERVER=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=password
MYSQL_DB=api_rocket_dev

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=your_port
REDIS_DB=0
REDIS_PASSWORD=
REDIS_POOL_SIZE=20
REDIS_SOCKET_TIMEOUT=5
REDIS_CONNECT_TIMEOUT=5
REDIS_MAX_RETRIES=3
REDIS_RETRY_INTERVAL=1

# JWT配置
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# 数据库连接池配置
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800
DB_ECHO=false

# Celery配置
CELERY_BROKER_URL=redis://localhost:your_port/1
CELERY_RESULT_BACKEND=redis://localhost:your_port/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=["json"]
CELERY_TIMEZONE=UTC
CELERY_ENABLE_UTC=true
CELERY_WORKER_CONCURRENCY=8
CELERY_WORKER_MAX_TASKS_PER_CHILD=100
CELERY_WORKER_PREFETCH_MULTIPLIER=4
CELERY_TASK_ACKS_LATE=true
CELERY_TASK_REJECT_ON_WORKER_LOST=true
CELERY_TASK_TRACK_STARTED=true

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/app.log
LOG_ROTATION=1 day
LOG_RETENTION=1 month
LOG_COMPRESSION=zip

# 监控配置
PROMETHEUS_MULTIPROC_DIR=/tmp
METRICS_PORT=9090
ENABLE_METRICS=true

# 服务发现配置
SERVICE_NAME=api-rocket
SERVICE_DISCOVERY_PROVIDER=consul
SERVICE_DISCOVERY_HOST=localhost
SERVICE_DISCOVERY_PORT=8500
SERVICE_TAGS=["api","fastapi"]
SERVICE_CHECK_INTERVAL=10s
SERVICE_CHECK_TIMEOUT=5s
SERVICE_CHECK_DEREGISTER_AFTER=1m

# 断路器配置
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=60
CIRCUIT_BREAKER_MAX_FAILURES=3
CIRCUIT_BREAKER_RESET_TIMEOUT=30

# 文件上传配置
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760
ALLOWED_UPLOAD_EXTENSIONS=[".jpg",".jpeg",".png",".gif",".pdf",".doc",".docx"]
IMAGE_MAX_DIMENSIONS=[2000,2000]
THUMBNAIL_SIZE=[200,200]
ENABLE_IMAGE_COMPRESSION=true
IMAGE_QUALITY=85

# 国际化配置
LOCALE_DIR=locales
DEFAULT_LOCALE=zh_CN
SUPPORTED_LOCALES=["zh_CN","en_US"]
FALLBACK_LOCALE=en_US

# HTTP客户端配置
HTTP_TIMEOUT=30
HTTP_MAX_RETRIES=3
HTTP_POOL_SIZE=100
HTTP_RETRY_INTERVAL=1
HTTP_MAX_REDIRECTS=10
HTTP_VERIFY_SSL=true

# 安全配置
ENABLE_RATE_LIMIT=true
RATE_LIMIT_STRATEGY=fixed-window
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPER=true
PASSWORD_REQUIRE_LOWER=true
PASSWORD_REQUIRE_DIGIT=true
PASSWORD_REQUIRE_SPECIAL=true
ENABLE_IP_WHITELIST=false
IP_WHITELIST=[]

# 备份配置
BACKUP_DIR=backups
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true
BACKUP_SCHEDULE="0 0 * * *"
BACKUP_MAX_SIZE=1073741824

# 灾难恢复配置
DR_ENABLED=false
DR_BACKUP_LOCATION=s3://backup
DR_BACKUP_FREQUENCY=daily
DR_RETENTION_PERIOD=30
DR_AUTO_FAILOVER=false
DR_FAILOVER_THRESHOLD=3

# 阿里云配置
ALIYUN_ACCESS_KEY_ID=your-access-key-id
ALIYUN_ACCESS_KEY_SECRET=your-access-key-secret

# 阿里云OSS配置
ALIYUN_OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com
ALIYUN_OSS_BUCKET=your-bucket
ALIYUN_OSS_INTERNAL=false
ALIYUN_OSS_SECURE=true

# 阿里云SMS配置
ALIYUN_SMS_REGION_ID=cn-hangzhou
ALIYUN_SMS_ENDPOINT=dysmsapi.aliyuncs.com
ALIYUN_SMS_SIGN_NAME=your-sign-name
ALIYUN_SMS_TEMPLATE_CODE=your-template-code

# 腾讯云配置
TENCENT_SECRET_ID=your-secret-id
TENCENT_SECRET_KEY=your-secret-key

# 腾讯云COS配置
TENCENT_COS_REGION=ap-guangzhou
TENCENT_COS_BUCKET=your-bucket
TENCENT_COS_SCHEME=https

# 腾讯云SMS配置
TENCENT_SMS_APP_ID=your-app-id
TENCENT_SMS_REGION=ap-guangzhou
TENCENT_SMS_ENDPOINT=sms.tencentcloudapi.com
TENCENT_SMS_SIGN_NAME=your-sign-name
TENCENT_SMS_TEMPLATE_ID=your-template-id

# MinIO配置
MINIO_ENDPOINT=play.min.io
MINIO_ACCESS_KEY=your-access-key
MINIO_SECRET_KEY=your-secret-key
MINIO_BUCKET=your-bucket
MINIO_SECURE=true
MINIO_REGION=

# Ceph配置
CEPH_ACCESS_KEY=your-access-key
CEPH_SECRET_KEY=your-secret-key
CEPH_ENDPOINT=your-endpoint
CEPH_BUCKET=your-bucket
CEPH_SECURE=true
CEPH_REGION=
CEPH_SIGNATURE_VERSION=s3v4

